@model ProyectoCRUD.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="card card-warning">
            <div class="bg-success bg-opacity-75 card card-header">
                <h4>Editar contacto</h4>
            </div>
            <div class="card-body">
                <form action="@Url.Action("Editar","Contacto")" method="post">
                    <input type="hidden" name="IdContacto" class="form-control" value="@Html.DisplayTextFor(m => m.IdContacto)" />
                    <div class="form-group">
                        <label>Nombres</label>
                        @*/Con lo que contiene el Value le estoy diciendo que tome lo que contiene mi Modelo(Contacto)*@
                        <input type="text" name="Nombres" class="form-control" value="@Html.DisplayTextFor(m => m.Nombres)" />
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" name="Apellidos" class="form-control" value="@Html.DisplayTextFor(m => m.Apellidos)" />
                    </div>
                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="text" name="Telefono" class="form-control" value="@Html.DisplayTextFor(m => m.Telefono)" />
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" name="Correo" class="form-control" value="@Html.DisplayTextFor(m => m.Correo)" />
                    </div>
                    <div class="form-group form-control-plaintext">
                        <button type="submit" class="align-text-top btn btn-primary">Guardar</button>
                        <a class="align-text-top btn btn-warning" href="@Url.Action("Inicio","Contacto")">Volver</a>
                    </div>

                </form>


            </div>
        </div>
    </div>
</div>

