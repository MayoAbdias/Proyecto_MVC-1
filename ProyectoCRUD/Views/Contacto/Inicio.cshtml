@model List<ProyectoCRUD.Models.Contacto>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="card card-warning">
            <div class="bg-danger bg-opacity-50 card card-header">
                <h4>Lista de contactos</h4>
            </div>
            <div class="card-body">
@*/Para dirigirme a otra pagina Utilizo RAZOR + Url.Action + nombre de la pagina(en este caso Registrar)y el nombre del controlador*@
                <a class="btn btn-success" href="@Url.Action("Registrar","Contacto")" >Crear Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @*/Utilizo RAZOR(@)para insertar codio C# en hoja HTML*@
                            @foreach(ProyectoCRUD.Models.Contacto item in Model)
                            {
                                <tr>
                                    <td>@item.Nombres</td>
                                    <td>@item.Apellidos</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.Correo</td>
                                    <td>
                                        @*Como el metodo Editar recibe un parametro debo agregarlo aca tambien. *@
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Editar","Contacto", new {idcontacto = item.IdContacto})">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar","Contacto", new {idcontacto = item.IdContacto})">Eliminar</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


